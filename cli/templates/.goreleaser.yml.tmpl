version: 2

before:
  hooks:
    - go mod tidy
    - ./scripts/build_frontend.sh

builds:
  - env:
      - CGO_ENABLED=0
    goos:
      - linux
      - darwin
    goarch:
      - amd64
      - arm64
    main: ./cmd/{{.ProjectName}}
    binary: {{.ProjectName}}
    ldflags:
      - -s -w -X main.version={{"{{"}} .Version {{"}}"}}

archives:
  - format: tar.gz
    name_template: >-
      {{"{{"}} .ProjectName {{"}}"}}_
      {{"{{"}}- title .Os {{"}}"}}_{{"{{"}}.Arch {{"}}"}}
    format_overrides:
      - goos: windows
        format: zip

checksum:
  name_template: 'checksums.txt'

snapshot:
  version_template: "{{"{{"}} incpatch .Version {{"}}"}}-next"

changelog:
  sort: asc
  filters:
    exclude:
      - '^docs:'
      - '^test:'
